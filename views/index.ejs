<!DOCTYPE html>
<html>
  <head>
    <title>My Hot Bartender</title>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
  </head>
  <body>
    <div id="map"></div>
    <script>
// Note: This example requires that you consent to location sharing when
// prompted by your browser. If you see the error "The Geolocation service
// failed.", it means you probably did not give permission for the browser to
// locate you.
var map;
var infoWindow;
var currentLat;
var currentLong;

function initMap() {

  var pyrmont;

  // Try HTML5 geolocation.
  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(function(position) {
      var pos = {
        lat: position.coords.latitude,
        lng: position.coords.longitude,
      };

      currentLat  = position.coords.latitude;
      currentLong = position.coords.longitude;

    pyrmont = pos;
    var request = {
    location: pyrmont,
    radius: '500',
    types: ['bar']
  };

  map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: currentLat, lng: currentLong},
    zoom: 16
  });

infoWindow = new google.maps.InfoWindow({map: map});

  service = new google.maps.places.PlacesService(map);
  service.nearbySearch(request, callback);

      infoWindow.setPosition(pos);
      infoWindow.setContent('Here you are!');
      map.setCenter(pos);
    }, function() {
      handleLocationError(true, infoWindow, map.getCenter());
    });
  } else {
    // Browser doesn't support Geolocation
    handleLocationError(false, infoWindow, map.getCenter());
  }

}

function callback(results, status) {
  if (status == google.maps.places.PlacesServiceStatus.OK) {
    for (var i = 0; i < results.length; i++) {
      var place = results[i];
      createMarker(results[i]);
    }
  }
}

function createMarker(place) {
  var placeLoc = place.geometry.location;
  var marker = new google.maps.Marker({
    map: map,
    position: place.geometry.location
  });


    marker.addListener('click', function() {
      map.setZoom(16);
      map.setCenter(marker.getPosition());
    });

  google.maps.event.addListener(marker, 'click', function() {
    infoWindow.setContent(place.name);
    infoWindow.open(map, this);
    saveInteraction('click', map, place);
  });
}

function saveInteraction(type, map, place) {
    $.ajax({
    type: "POST",
    url: "http://localhost:3000/",
    data: JSON.stringify({"objectData": place.name}),
    dataType: "json",
    contentType: "application/json; charset=utf-8",
    success: function(){
        console.log("successful request");
    }
  });
}

function handleLocationError(browserHasGeolocation, infoWindow, pos) {
  infoWindow.setPosition(pos);
  infoWindow.setContent(browserHasGeolocation ?
                        'Error: The Geolocation service failed.' :
                        'Error: Your browser doesn\'t support geolocation.');
}

    </script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA1gqRr70060chHk8ah73tEvGoT5ZA3G1E&signed_in=true&libraries=places&callback=initMap"
        async defer>
    </script>
  </body>
</html>
